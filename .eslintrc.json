{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    // "extends": "standard", 
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "io": false,
        "Qs": false,
        "moment": false,
        "Mustache": false
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": [2, "always"]
    }
}